{
    "$schema": "http://json.schemastore.org/prettierrc",
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "quoteProps": "as-needed",
    "semi": true,
    "tabWidth": 4,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 100,
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "printWidth": 100
            }
        }
    ]
}
